@page
@model OnlineLearningSystem.Pages.Classrooms.IndexModel

@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>




@* <a asp-page="" class="btn btn-success">Create New</a> *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Classroom[0].ClassName)
            </th>
            <th>
                Status
            </th>
            <th>
                Created By
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classroom[0].FormTeacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Classroom)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @(item.IsActive ? "Active" : "Inactive")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateByNavigation.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormTeacher.Fullname)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ClassId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ClassId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ClassId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
