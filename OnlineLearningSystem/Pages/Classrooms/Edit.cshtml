@page
@model OnlineLearningSystem.Pages.Classrooms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Classroom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Classroom.ClassId" />
            <div class="form-group">
                <label asp-for="Classroom.ClassName" class="control-label"></label>
                <input asp-for="Classroom.ClassName" class="form-control" />
                <span asp-validation-for="Classroom.ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classroom.CreateBy" class="control-label"></label>
                <select asp-for="Classroom.CreateBy" class="form-control" asp-items="ViewBag.CreateBy"></select>
                <span asp-validation-for="Classroom.CreateBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classroom.FormTeacherId" class="control-label"></label>
                <select asp-for="Classroom.FormTeacherId" class="form-control" asp-items="ViewBag.FormTeacherId"></select>
                <span asp-validation-for="Classroom.FormTeacherId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Classroom.IsActive" /> @Html.DisplayNameFor(model => model.Classroom.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
