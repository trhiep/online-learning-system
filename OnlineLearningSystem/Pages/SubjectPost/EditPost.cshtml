    ViewData["Title"] = "EditPost";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>EditPost</h1>

<h4>ClassSubjectPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassSubjectPost.ClassSubjectId" class="control-label"></label>
                <select asp-for="ClassSubjectPost.ClassSubjectId" class="form-control" asp-items="ViewBag.ClassSubjectId"></select>
                <span asp-validation-for="ClassSubjectPost.ClassSubjectId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ClassSubjectPost.PostId" />
            <div class="form-group">
                <label asp-for="ClassSubjectPost.Title" class="control-label"></label>
                <input asp-for="ClassSubjectPost.Title" class="form-control" />
                <span asp-validation-for="ClassSubjectPost.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassSubjectPost.Content" class="control-label"></label>
                <input asp-for="ClassSubjectPost.Content" class="form-control" />
                <span asp-validation-for="ClassSubjectPost.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassSubjectPost.PostedDate" class="control-label"></label>
                <input asp-for="ClassSubjectPost.PostedDate" class="form-control" />
                <span asp-validation-for="ClassSubjectPost.PostedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
