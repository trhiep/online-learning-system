@page
@model OnlineLearningSystem.Pages.Notifications.IndexModel

@{
    ViewData["Title"] = "All notification";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-success">New notification</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].Title)
            </th>
            <th>
                Create Date
            </th>
            <th>
                From
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Notification)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByNavigation.Fullname)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.NotificationId">Read</a>
                </td>
            </tr>
        }
    </tbody>
</table>
