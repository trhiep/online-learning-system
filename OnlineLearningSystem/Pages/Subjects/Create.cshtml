@page
@model OnlineLearningSystem.Pages.Gen.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Tạo tên lớp</h1>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border border-1 p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Subject.SubjectName" class="form-label"></label>
                        <input asp-for="Subject.SubjectName" class="form-control" />
                        <span asp-validation-for="Subject.SubjectName" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 d-flex justify-content-center">
            <a asp-page="Index" class="btn btn-outline-success">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
