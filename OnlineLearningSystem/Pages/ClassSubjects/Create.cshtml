@page
@model OnlineLearningSystem.Pages.ClassSubjects.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ClassSubject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5 class="text-danger">@ViewData["Error"]</h5>
            <div class="form-group">
                <label asp-for="ClassSubject.ClassId" class="control-label"></label>
                <input asp-for="ClassSubject.ClassId" class="form-control" value="@Model.Class.ClassId" placeholder="@Model.Class.ClassName" readonly />
            </div>

            <div class="form-group">
                <label>Giáo viên bộ môn</label>
                <div>
                    @foreach (var teacher in ViewBag.TeacherList)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="ClassSubject.SubjectTeacher" value="@teacher.AccountId" />
                            <label class="form-check-label">
                                @teacher.Fullname
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <label>Môn học:</label>
                <div>
                    @foreach (var subject in ViewBag.SubjectList)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="ClassSubject.SubjectId" value="@subject.SubjectId" />
                            <label class="form-check-label">
                                @subject.SubjectName
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ListClassSubject" asp-route-id="@Model.Class.ClassId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
