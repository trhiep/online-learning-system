
@page "/dashboard"
@inject IHttpContextAccessor HttpContextAccessor

@model OnlineLearningSystem.Pages.Dashboard.UserManageModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OLS</title>
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Roboto:wght@700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/flaticon/font/flaticon.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="~/lib/richtexteditor/rte_theme_default.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/customized-bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard_style.css" asp-append-version="true" />

</head>
<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow-sm py-3 py-lg-0 px-3 px-lg-0">
        <a href="/Home" class="navbar-brand ms-lg-5">
            <h1 class="m-0 text-uppercase text-dark"><i class="bi bi-brightness-alt-high-fill fs-1 text-success me-3"></i>OLS</h1>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0" style="margin-right:50px">
                <a href="/" class="nav-item nav-link">TRANG CHỦ</a>
                @if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("UserSession")))
                {
                    <a href="/Login" class="nav-item nav-link">ĐĂNG NHẬP</a>
                }
                else
                {
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @HttpContextAccessor.HttpContext.Session.GetString("UserSession")
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            @if (@HttpContextAccessor.HttpContext.Session.GetString("RoleSession") == ("Admin"))
                            {
                                <li><a class="dropdown-item" href="/dashboard">Profile Admin</a></li>
                                <li><a class="dropdown-item" href="/admin-profile">Profile</a></li>

                                <li><a class="dropdown-item" asp-page="/Authen/Logout">Logout</a></li>
                            }
                           
                               
                        </ul>
                    </div>
                }
            </div>
        </div>
    </nav>
    <div id="admin-dashboard">
        <aside id="sidebar">
            <ul>
                <li><a asp-page="/GenerateAccount/Index">Quản lý người dùng</a></li>
                <li><a asp-page="/Dashboard/GenerateStudentAccount">Quản Lí Học Sinh</a></li>
                <li><a href="#">Cài đặt</a></li>
            </ul>
        </aside>
        <main id="main-content">
            <h1>Chào mừng đến với Admin Dashboard</h1>
            <p>Nội dung chính của trang quản trị sẽ hiển thị ở đây.</p>
        </main>
    </div>
    !-- JavaScript Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/richtexteditor/rte.js"></script>
    <script src="~/lib/richtexteditor/plugins/all_plugins.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</body>
</
